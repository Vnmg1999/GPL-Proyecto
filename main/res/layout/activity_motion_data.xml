<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293055"
    tools:context=".ui.DataMotion">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="391dp"
        android:layout_height="79dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewmotion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_card"
            android:backgroundTint="@null"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:text="@string/movimiento"
            android:textColor="#CEE4E6"
            android:textSize="30sp"
            android:textStyle="normal|bold" />

    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewmotion"
        android:layout_width="411dp"
        android:layout_height="514dp"
        android:layout_marginBottom="20dp"
        android:background="#5B94D8"
        android:backgroundTint="#456B98"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">


    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnback"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="177dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/regresar"
        app:backgroundTint="#AAB2CA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/blue_200"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>