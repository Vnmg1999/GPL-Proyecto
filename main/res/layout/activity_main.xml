<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7070BC"
    tools:context=".ui.MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardMotion"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/motionimagev"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:background="#313A6E"
            android:contentDescription="motionsensor"
            app:srcCompat="@drawable/motionsensorb" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLed"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="#313A6E"
        android:backgroundTint="#2F3973"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardMotion">

        <ToggleButton
            android:id="@+id/buttonled"
            android:layout_width="149dp"
            android:layout_height="91dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="271dp"
            android:layout_marginRight="271dp"
            android:background="#6C86B6"
            android:backgroundTint="#6C86B6"
            android:text=""
            android:textColor="#223185"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:contentDescription="led"
            app:srcCompat="@drawable/luz" />


    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnexit"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="177dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/salir"
        app:backgroundTint="#2D44C5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/white"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>